<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >
    
      <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_x="0dip"
        android:layout_y="-1dip"
        android:background="@drawable/title"
        android:gravity="center_vertical" >


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="主页"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

     <EditText
         android:id="@+id/editText1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/shoukuan"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="174dp"
         android:ems="1" >

         <requestFocus />
     </EditText>

     <Button
         android:id="@+id/duixian"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/shoukuan"
         android:layout_below="@+id/rl_layout"
         android:layout_marginTop="92dp"
         android:layout_toRightOf="@+id/editText1"
         android:background="@drawable/tabs_duixian" />

     <Button
         android:id="@+id/pay"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/duixian"
         android:layout_alignBottom="@+id/duixian"
         android:layout_marginRight="34dp"
         android:layout_toLeftOf="@+id/editText1"
         android:background="@drawable/tabs_pay" />

     <Button
         android:id="@+id/shoukuan"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/duixian"
         android:layout_marginLeft="36dp"
         android:layout_marginTop="104dp"
         android:layout_toRightOf="@+id/editText1"
         android:background="@drawable/tabs_shoukuan" />

     <Button
         android:id="@+id/transfer"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/editText1"
         android:layout_alignLeft="@+id/pay"
         android:background="@drawable/tabs_transfer" />

     <TextView
         android:id="@+id/text_duixian"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/text_shoukuan"
         android:layout_below="@+id/duixian"
         android:text="兑现"
         android:textColor="@android:color/darker_gray"
         android:textSize="17sp" />

     <TextView
         android:id="@+id/text_shoukuan"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignRight="@+id/shoukuan"
         android:layout_below="@+id/shoukuan"
         android:layout_marginRight="18dp"
         android:text="收款"
         android:textColor="@android:color/darker_gray"
         android:textSize="17sp" />

     <TextView
         android:id="@+id/text_transfer"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/transfer"
         android:layout_below="@+id/transfer"
         android:layout_marginLeft="19dp"
         android:text="转账"
         android:textColor="@android:color/darker_gray"
         android:textSize="17sp" />

     <TextView
         android:id="@+id/text_fukuan"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/text_duixian"
         android:layout_alignBottom="@+id/text_duixian"
         android:layout_alignLeft="@+id/text_transfer"
         android:text="付款"
         android:textColor="@android:color/darker_gray"
         android:textSize="17sp" />

</RelativeLayout>