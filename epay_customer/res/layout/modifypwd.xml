<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f3f3f3" >
    
    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_x="0dp"
        android:layout_y="-1dp"
        android:background="@drawable/title"
        android:gravity="center_vertical" >

  			<Button
            android:id="@+id/btn_back_m1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textSize="14sp"
            android:textColor="#fff"
            android:background="@drawable/title_btn_back"
		    />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="修改密码"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

     <AbsoluteLayout
         android:id="@+id/ll_lowwarn3"
         android:layout_width="300dip"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/ll_lowwarn1"
         android:layout_below="@+id/ll_lowwarn1"
         android:layout_marginTop="40dp"
         android:background="@drawable/singleline_item_bg"
         android:minHeight="40dip" >

         <TextView
             android:id="@+id/tv_pre"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_x="6dp"
             android:layout_y="28dp"
             android:text="请再次输入:"
             android:textColor="#000000"
             android:textSize="15dip" />

         <EditText
             android:id="@+id/editText3"
             android:layout_width="160dp"
             android:layout_height="wrap_content"
             android:layout_x="105dp"
             android:layout_y="17dp"
             android:alpha="0"
             android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
             android:ems="10"
             android:inputType="textPassword" />

     </AbsoluteLayout>

     <AbsoluteLayout
         android:id="@+id/ll_lowwarn1"
         android:layout_width="300dip"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/ll_lowwarn"
         android:layout_alignRight="@+id/ll_lowwarn"
         android:layout_centerVertical="true"
         android:background="@drawable/singleline_item_bg"
         android:minHeight="40dip" >

         <TextView
             android:id="@+id/tv_pre"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_x="6dp"
             android:layout_y="28dp"
             android:text="请输入新密码:"
             android:textColor="#000000"
             android:textSize="15dip" />

         <EditText
             android:id="@+id/editText2"
             android:layout_width="162dp"
             android:layout_height="wrap_content"
             android:layout_x="105dp"
             android:layout_y="17dp"
             android:alpha="0"
             android:ems="10"
              android:digits="1234567890abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
             android:inputType="textPassword"
              />

     </AbsoluteLayout>

     <Button
         android:id="@+id/check"
         android:layout_width="50dip"
         android:layout_height="50dip"
         android:layout_below="@+id/ll_lowwarn"
         android:layout_centerHorizontal="true"
         android:background="@drawable/tabs_next" />

     <AbsoluteLayout
         android:id="@+id/ll_lowwarn"
         android:layout_width="300dip"
         android:layout_height="wrap_content"
         android:layout_below="@+id/rl_layout"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="48dp"
         android:background="@drawable/singleline_item_bg"
         android:minHeight="40dip" >

         <TextView
             android:id="@+id/tv_pre"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_x="6dp"
             android:layout_y="28dp"
             android:text="请输入旧密码:"
             android:textColor="#000000"
             android:textSize="15dip" />

         <EditText
             android:id="@+id/editText1"
             android:layout_width="161dp"
             android:layout_height="wrap_content"
             android:layout_x="105dp"
             android:layout_y="17dp"
             android:alpha="0"
             android:ems="10"
             android:inputType="textPassword" >

             <requestFocus />
         </EditText>
     </AbsoluteLayout>

     <Button
         android:id="@+id/confirm"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/ll_lowwarn3"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="14dp"
         android:background="@drawable/tabs_confirm" />

</RelativeLayout>
