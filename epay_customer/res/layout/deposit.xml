<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffe3e3e3"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_x="0dp"
        android:layout_y="-1dp"
        android:background="@drawable/title"
        android:gravity="center_vertical" >

  			<Button
            android:id="@+id/btn_back"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="返回"
            android:textSize="14sp"
            android:textColor="#fff"
            android:background="@drawable/title_btn_back"
		    />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="存款理财"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </RelativeLayout>

    <Button
        android:id="@+id/confirm"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:background="@drawable/tabs_confirm"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <AbsoluteLayout
        android:id="@+id/ll_lowwarn3"
        android:layout_width="281dip"
        android:layout_height="wrap_content"
        android:layout_above="@+id/confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/singleline_item_bg"
        android:minHeight="40dip" >

        <TextView
            android:id="@+id/tv_pre3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="6dip"
            android:layout_y="29dip"
            android:text="请输入存款金额:"
            android:textColor="#000000"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="250dp"
            android:layout_y="30dp"
            android:text="元"
            android:textSize="15dip" />

        <EditText
            android:id="@+id/editText1"
            android:layout_width="114dp"
            android:layout_height="40dp"
            android:layout_marginRight="62dip"
            android:layout_x="132dp"
            android:layout_y="22dp"
            android:alpha="0"
            android:ems="10"
            android:inputType="numberDecimal" >

            <requestFocus />
        </EditText>
    </AbsoluteLayout>

    <AbsoluteLayout
        android:id="@+id/ll_lowwarn1"
        android:layout_width="281dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ll_lowwarn3"
        android:layout_centerVertical="true"
        android:background="@drawable/singleline_item_bg"
        android:minHeight="40dip" >

        <TextView
            android:id="@+id/tv_value1"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="62dip"
            android:layout_x="154dp"
            android:layout_y="18dip"
            android:background="@drawable/edittext1"
            android:gravity="left|center"
            android:minHeight="40dip"
            android:paddingLeft="5dip"
            android:textColor="#ff000000"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/tv_pre1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="6dip"
            android:layout_y="29dip"
            android:text="请选择利息计算方式:"
            android:textColor="#000000"
            android:textSize="15dip" />

        <ImageButton
            android:id="@+id/bt_dropdown1"
            android:layout_width="27dp"
            android:layout_height="20dp"
            android:layout_x="236dp"
            android:layout_y="29dp"
            android:background="@drawable/down_arrow" />
    </AbsoluteLayout>

    <AbsoluteLayout
        android:id="@+id/ll_lowwarn"
        android:layout_width="281dip"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_lowwarn1"
        android:layout_alignLeft="@+id/ll_lowwarn1"
        android:layout_marginBottom="36dp"
        android:background="@drawable/singleline_item_bg"
        android:minHeight="40dip" >

        <TextView
            android:id="@+id/tv_value"
            android:layout_width="136dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="62dip"
            android:layout_x="135dip"
            android:layout_y="18dip"
            android:background="@drawable/edittext1"
            android:gravity="left|center"
            android:minHeight="40dip"
            android:paddingLeft="5dip"
            android:textColor="#ff000000"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/tv_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="6dip"
            android:layout_y="29dip"
            android:text="请选择存款方式:"
            android:textColor="#000000"
            android:textSize="15dip" />

        <ImageButton
            android:id="@+id/bt_dropdown"
            android:layout_width="27dp"
            android:layout_height="20dp"
            android:layout_x="236dp"
            android:layout_y="29dp"
            android:background="@drawable/down_arrow" />
    </AbsoluteLayout>

</RelativeLayout>